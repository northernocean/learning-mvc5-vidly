
<!DOCTYPE html>

<h2>New Rental Form</h2>

<form>
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="new-rental-customer" class="form-control" type="text" value="" />
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="new-rental-movie" class="form-control" type="text" value="" />
        </div>
    </div>
    <button class="btn btn-primary mb-3">Submit</button>
    <div></div>
</form>

<div class="row">
    <div class="col-md-4">
        <ul id="rental-movies" class="list-group"></ul>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var vm = {
                movieIds: []
            };

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#new-rental-customer').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select", function (e, customer) {
                vm.customerId = customer.id;
                console.log(vm);
            });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#new-rental-movie').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'movies',
                display: 'name',
                source: movies
            }).on("typeahead:select", function (e, movie) {
                vm.movieIds.push(movie.id);
                console.log(vm);
                $("#rental-movies").append("<li class='list-group-item'>" + movie.name + "</li>");
                $("#new-rental-movie").typeahead("val", "");
            });

